# Configuração do Banco de Dados (ambiente local)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=igestorphone
DB_USER=postgres
DB_PASSWORD=postgres

# Configuração do Banco de Dados (produção)
# Use a URL fornecida pelo Neon (ou outro Postgres gerenciado)
DATABASE_URL=postgresql://username:password@ep-example.neon.tech/neondb?sslmode=require

# Configuração do Servidor
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# JWT
JWT_SECRET=alterar_em_producao_com_valor_forte
JWT_EXPIRES_IN=7d

# Stripe (para pagamentos)
STRIPE_SECRET_KEY=sk_test_sua_chave_secreta_do_stripe
STRIPE_PUBLISHABLE_KEY=pk_test_sua_chave_publica_do_stripe
STRIPE_WEBHOOK_SECRET=whsec_sua_chave_webhook_do_stripe

# Email (para notificações)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu_email@gmail.com
SMTP_PASS=sua_senha_de_app
FROM_EMAIL=noreply@igestorphone.com

# Configurações de Segurança
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=500
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX=50

# Logs
LOG_LEVEL=info
LOG_FILE_PATH=logs/

# Configurações da Aplicação
APP_NAME=iGestorPhone
APP_VERSION=1.0.0
APP_DESCRIPTION=Sistema inteligente de automação para lojistas Apple

# OpenAI API
OPENAI_API_KEY=sk-your-openai-key
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=4000